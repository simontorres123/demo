<?xml version="1.0" encoding="UTF-8"?>
<persistence  xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence  http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">  
    <persistence-unit name="demo-persistence-unit" transaction-type="RESOURCE_LOCAL" >
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.demo.model.Person</class>
        <class>com.example.demo.model.SoccerTeam</class>
        <class>com.example.demo.model.PersonSoccer</class>
        <exclude-unlisted-classes/>
    </persistence-unit>
</persistence>
    
    
    